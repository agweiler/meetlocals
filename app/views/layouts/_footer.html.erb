
<footer class= "footer">
<br>
  <!-- <div class="container"> -->
    <!-- <div class="row"> -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="row">
          <p style="color: #fff"><strong> Get Meet the Danes' newsletter</strong></p>
        </div>

        <div class="row">
          <div class="col-xs-offset-1 col-xs-10" id="email-form">
            <%= form_tag('emailapi/subscribe', class: "form-inline", method: "post", id: "subscribe", remote: "true", 'data-type' => :json) do -%>
            <div class="input-group">
               <%= email_field(:email, :address, {class: "form-control", style:"", id: "email", placeholder: "email address"})%>
               <!-- <%= submit_tag("Sign me up!") %> -->
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-info") do %> Sign me up! <% end %>
              </span>
              <% end %>
            </div>
          </div>
        </div>
        <br>
      </div>

      <div class="col-md-4 col-sm-6 col-xs-12" style="background-color: #1A1A1A">
        <div class="row">
           <p style="color:#fff"><strong> Quick Links </strong></p>
        </div>

        <div class="row"  class="text-center">
          <p>
            <%= link_to "About", about_path, style: "color: #fff" %>&nbsp;&nbsp;
            <%= link_to "Find a Host", experiences_path, style: "color: #fff" %>&nbsp;&nbsp;
            <%= link_to "Be a Host", how_to_be_a_host_path, style: "color: #fff" %>
          </p>

          <p>
            <%= link_to "Terms of Service", terms_of_service_path, style: "color: #fff" %>
          </p>
        </div>
      </div>


      <div class="col-md-4 col-sm-12 col-xs-12" style="background-color: #1A1A1A">

        <div class="row">
          <p class="text-center" style="color: #fff">
            <strong> Connect with us on Social & Email </strong></p>
        </div>

        <div class="row">
          <ul class="list-inline social-buttons">
            <li class="" style=""><a href="https://www.facebook.com"><i id="social" class="fa fa-facebook-square fa-3x social-fb"></i></a></li>
            <li class=""><a href="https://twitter.com/"><i id="social" class="fa fa-twitter-square fa-3x social-tw"></i></a></li>
            <li class=""><a href="https://plus.google.com"><i id="social" class="fa fa-google-plus-square fa-3x social-gp"></i></a></li>
            <li class=""><a href="mailto:"><i id="social" class="fa fa-envelope-square fa-3x social-em"></i></a></li>
          </ul>
        </div>

      </div>



    <!-- </div> -->
  <!-- </div> -->

</footer>

<script>
  $(document).ready(function(){
    $("#subscribe").on("ajax:success", function(e, data, status, xhr) {
      $('#email-form').append("<li class='signup-notice'>" + xhr.responseJSON.msg + "</li>")
      // alert(xhr.responseJSON.msg);
    });

  });

</script>
