<div class="container pad-top pad-bot" id="post-show">

  <div class="col-md-12" align="center">

		<h1 class="title heads" style="color:#66a422"><%= @post.title %></h1>
		<p class="date">
			Submitted <%= time_ago_in_words(@post.created_at) %> Ago
			<% if admin_signed_in? %>
			| <%= link_to 'Edit', edit_post_path(@post) %> |
			  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
		  <% end %>
		</p>
		<%= image_tag @post.image.url(:large), class:"img-responsive paddo" if @post.image_file_name %>

	 
		<p class="col-md-8 col-md-offset-2 post_content" id="post-content"><%= @post.body.html_safe %></p>
		
	  <!-- <%=  link_to 'Back to blog', blog_path %> -->

	</div>
<p align="center"><%= link_to 'Back to Blog', blog_path, class: 'btn btn-lg' %></p>

</div>
