<div class="container">
 <div class="row">
  <div class="col-md-6">

		<div id="post_content">
		<h1 class="title"><%= @post.title %></h1>
				<p class="date">
					Submitted <%= time_ago_in_words(@post.created_at) %> Ago
					<% if admin_signed_in? %>
					| <%= link_to 'Edit', edit_post_path(@post) %> |
					  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
				  <% end %>
				</p>
			<%= image_tag @post.image.url(:full) %>
		</div>
	</div>
	  <div class="col-md-5" style="margin-top: 95px; margin-left: 30px">

				<p class="body"><%= @post.body.html_safe %></p>

		  <%=  link_to 'Back to blog', blog_path %>
		</div>
	</div>
</div>
