<%= form_for @post, html: { multipart: true} do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
      
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

  <div class="row">

	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control", style: "width:50%" %><br>
  </div>

  <div class="row">

	<%= f.label :body %><br>
	<%= f.text_area :body, class: "form-control border-hitam wysihtml5 col-md-10", style: "width:100%; height: 200px" %><br>
  <%= f.hidden_field :post_type, :value => "#{@post_type}" if @action == 'new' %>
	</br>
  </div>

  <% if params[:post_type] == 'press' || @post.post_type == 'press' %>
    <div class="row">
      <%= f.label :video_url %><br>
      <%= f.text_field :video_url, class: "form-control" %><br>
    </br>
    </div>
  <% end %>
  <div class="row">
  <div class="field">

      <div class="input-group">
        <input type="text" class="form-control" placeholder="" readonly>
        <span class="input-group-btn">
          <span class="btn btn-default border-hitam btn-file">
            Upload Image<%= f.file_field(:image_file) %>
          </span>
        </span>
      </div>
  </div>
  </div>

  <div class="actions pull-right">
   <%= f.submit "Publish", class:"btn btn-default blue btn-xl" %>
  </div>

<% end %>

<script type="text/javascript">
  $(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

    $('.glyphicon-picture').parent().attr('style', 'display:none');
  });
</script>
