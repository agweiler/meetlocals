<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>
<%= form_for @post, html: { multipart: true} do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<%= f.label :title %><br>
	<%= f.text_field :title, class: "form-control", style: "width:20%" %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_area :body, class: "form-control wysihtml5 col-md-10", style: "width:100%; height: 200px" %><br>
	<br>
	<%= f.label :image %><br>
	<%= f.file_field :image %><br>
	<br>

  <div class="actions">
             <%= button_tag(type: 'submit', class: "btn btn-default", style: "background-color:#1abc9c; color:#f5f5f5") do %> Publish!
          <% end %>
          <% end %>

          </div>
