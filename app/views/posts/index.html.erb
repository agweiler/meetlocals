<div class="container">

  <div class="row">
    <h1 class="heads" style="text-align: center; color:#66a422; font-size:70px;"> Blog
      <%= link_to "Create New Post", new_post_path, class: "btn btn-default pull-right" if admin_signed_in? %>
    </h1>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
  	<div class="col-md-4 col-xs-6">
      <%= content_tag :h3, link_to(post.title, post), class:'title' %>
      <%= image_tag post.image.url(:medium), style: "border-radius:5%" %>
      <%= content_tag :p, post.created_at.strftime("%B %d, %Y") %>
  	</div>
    <% end %>
  </div>

</div>
