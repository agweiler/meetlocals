    <% if idx.even? %>
      <div class="col-md-4 thumbnail">
        <%= link_to image_tag(host.experiences.first.images.first.image_file.url(:medium)),
          host.experiences.first %>
      </div>
      <div class="col-md-4 text-center recent-host" style="">
        <%= link_to image_tag(host.images.first.image_file.url(:thumb),
            class: "img-circle"), host if host.images.present? %>
        <h3 class="heads-lt">
          <%= link_to host.username, host_path(host) %>
        </h3>
        <h4>HOST</h4>
        <%= link_to host.experiences.first.title, experience_path(host.experiences.first), class:"event-title" %><br>
        <%= content_tag :quote, host.experiences.first.description, class:"para" %>
      </div>
      <div class="col-md-4" >
      
      </div>
    <% else %>
      <div class="col-md-4">
       
      </div>
      <div class="col-md-4 text-center recent-host" style="">
        <%= link_to image_tag(host.images.first.image_file.url(:thumb),
            class: "img-circle"), host if host.images.present? %>
        <h3 class="heads-lt">
          <%= link_to host.username, host_path(host) %>
        </h3>
        <h4>HOST</h4>
        <%= link_to host.experiences.first.title, experience_path(host.experiences.first), class:"event-title" %><br>
        <%= content_tag :quote, host.experiences.first.description, class:"para" %>
      </div>
      <div class="col-md-4 thumbnail">
        <%= link_to image_tag(host.experiences.first.images.first.image_file.url(:medium)),
          host.experiences.first %>
      </div>
    <% end %>

   </div>
   <% end %>
</div>

<div class="container-fluid" style="background-color: #D4D4D4" id="host_party">
  <h3 class="heads">HOST PARTY</h3>
  <% @host_party.each do |experience| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(experience.images.first.image_file.url(:medium)),
          experience if experience.images.present?%>

        <div class="caption" style="background-color: #FFF; height: 100%; padding:20px">

          <h3 class="heads-lt">
            <%= link_to experience.host.username,  host_path(experience.host) %>
          </h3>
          <h5 class="para">Description: </h5>
          <%= content_tag :quote, truncate(experience.description, length: 140) ,class:"para" %>

         <!--  <p><a href="#" class="btn btn-info btn-xs" role="button">Button</a></p> -->
          <p>
            <%= content_tag :span, experience.date.strftime(" %B %d, %Y"), class:"fa fa-calendar fa-lg", style:"margin-top:10px; color:grey" %>
            <%= link_to 'Book Now', experience, class: "btn btn-danger btn-md pull-right", style: "color:#fff" %>
          </p>
        </div>
      </div>
      <br><br>
    </div>
  <% end %>
</div>
