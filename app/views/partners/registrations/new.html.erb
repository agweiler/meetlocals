<h2 style="text-align:center; color:#66a422" class="heads pad-bot pad-top">Sign up a new Partner</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true ,class: "form-control" %>
  </div>

  <%= f.label :image %><br>
  <div class="input-group" style="margin-bottom:10px;">
    <span class="input-group-btn">
      <span class="btn btn-default upload-profile btn-file">
        Browse<%= f.file_field(:image_file) %>
      </span>
    </span>
    <input type="text" class="form-control" readonly>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :contact_info %><br />
    <%= f.text_field :contact_info, autofocus: true ,class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
<% end %>
<p class="pad-top"> Already have an account? Sign In below:</p>
<p><%= render "partners/shared/links" %></p>
    </div>
  </div>
</div>
