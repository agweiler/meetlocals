<h2 style="text-align:center">Edit Partner</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

	<%= form_for @partner, html: {multipart: true} do |f| %>
	<div class="field">
	  <%= f.label :name %><br />
	  <%= f.text_field :name, autofocus: true ,class: "form-control" %>
	</div>

	<%= f.label :image %><br>
	<div class="input-group">
	  <span class="input-group-btn">
	    <span class="btn btn-default upload-profile btn-file">
	      Browse<%= f.file_field(:image_file) %>
	    </span>
	  </span>
	  <input type="text" class="form-control" readonly>
	</div>

	<div class="field">
	  <%= f.label :address %><br />
	  <%= f.text_area :address, autofocus: true ,class: "form-control"%>
	</div>

	<div class="field">
	  <%= f.label :contact_info %><br />
	  <%= f.text_field :contact_info, autofocus: true ,class: "form-control"%>
	</div>

	<div class="actions">
	  <%= f.submit "Edit Profile" %>
	</div>
	<% end %>
			</div>
		</div>
	</div>
</div>