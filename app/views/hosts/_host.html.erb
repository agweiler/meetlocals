<div class="col-md-4 col-sm-6">
  <div class="thumbnail" style = "margin-bottom:15px">
    <%= link_to image_tag(host.experiences.first.exp_images.first.image_file.url(:medium)), experience_path(host.experiences.first) if host.experiences.first.exp_images.present? %>

    <div class="caption" style="background-color: #f3f3f3; height: 245px; padding:20px;">
      <div id="avataro">
        <%= link_to image_tag(host.images.first.image_file.url(:thumb), class: "img-circle"), experience_path(host.experiences.first) if host.images.present? %>
      </div>

         <h3 class = "host_name"><%= host.username %></h3>

      <p class="nas"> <%= link_to truncate(host.experiences.first.title, length: 50), experience_path(host.experiences.first) %> </p>

        <div>
        <label>Age:</label>
        <%= content_tag 'span', "#{host.age} yrs old" %><br>
        <label>Guests:</label>
        <%= content_tag 'span', "#{host.max_group_size} pax" %><br>
        <label>Speaks:</label>
        <%= content_tag 'span', truncate(host.languages, length: 50) %><br>
        </div>


      <p class="text-left">
        <% link_to 'More info', host, class: "btn btn-info btn-xs", style: "color:#fff" %>
      </p>
    </div>
  </div>
</div>
