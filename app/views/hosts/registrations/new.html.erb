<h2 id="header_text" class="heads pad-top" style="text-align: center; color:#66a422; font-size:70px;">Sign up as a Host</h2>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% flash[:alert] = devise_error_messages! if devise_error_messages! %>
          <div class="field pad-top">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </br>
        <div id="center_align" style="text-align: center">
          <div class="actions">
            <%= f.submit "SIGN UP", class: "btn btn-green",id: "host_signup" , style: "color: #fff; text-transform: uppercase;font-size: 15px; padding-left: 30px !important;
  padding-right: 30px !important; background: #66a422 !important;" %></br></br>
            <%= render "hosts/shared/links" %>

          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
