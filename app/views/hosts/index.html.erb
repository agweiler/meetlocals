<div class="row">
  <div style="" id="pre_foot">
      <h1 class="text-center">FIND YOUR PERFECT HOST</h1>
  </div>
</div>

<div class="row" id="search_box">
  <div class="col-xs-10 col-xs-offset-1 text-center" >

  <%= form_tag hosts_search_path, class:"form-inline"  do %>
  <div class='input-group col-sm-2 col-xs-12'>
    <%= text_field :search, :date,
    {class:"form-control datepick", placeholder:"Date"} %>
  </div>

  <div class='input-group col-sm-2 col-xs-12'>
    <%= select :search, :age_range, Host.age_ranges,
      {selected: @selected_age}, {class:"form-control"} %>
  </div>

  <div class="input-group col-sm-2 col-xs-12">
    <%= select :search, :max_group, (["Guests"] + (1..10).to_a),
      {selected: @selected_group}, {class:"form-control"} %>
  </div>

  <div class='input-group col-sm-2 col-xs-12'>
    <%= select :search, :location, Host.get_location,
      {selected: @selected_location}, {class:"form-control"} %>
  </div>

  <div class='input-group col-sm-2 col-xs-12'>
    <%= submit_tag :FILTER,
     {class:"btn btn-success col-sm-8 col-sm-offset-2 para"} %>
  </div>
  <% end %>

  </div>
</div>

<div class="container" style="margin-top:40px" id="view">
 <% @hosts.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |host| %>
    <div class="col-md-4">

      <div class="thumbnail">
        <%= link_to image_tag(host.experiences.first.images.first.image_file.url(:medium)), host if host.experiences.first.images.present?%>

        <div class="caption" style="background-color: #D4D4D4; height: 100%">
          <div id="avataro">
            <%= link_to image_tag(host.images.first.image_file.url(:thumb), class: "img-circle"), host if host.images.present? %>
          </div>

          <h2><%= link_to host.username,  host_path(host) %></p>
          </h2>

          <label>Speaks:</label>
          <%= content_tag 'span', host.languages %><br>
          <label>Guests:</label>
          <%= content_tag 'span', "#{host.max_group_size} pax" %><br>
          <label>Age:</label>
          <%= content_tag 'span', "#{host.age} yrs old" %><br>

          <p class="text-left">
            <% link_to 'More info', host, class: "btn btn-info btn-xs", style: "color:#fff" %>
          </p>
        </div>
      </div>

    </div>
    <% end %>
  </div>
  <% end %>
</div>

<script>
$(function(){
  $('.datepick').datepicker({
      clearBtn: false,
      format: "yyyy-mm-dd",
      keyboardNavigation: false
  });

  $('.datepick').datepicker('setDate', '<%= raw(@selected_date) %>')
});
</script>
