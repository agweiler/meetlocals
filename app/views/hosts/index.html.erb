<script>
$(function(){
  $('.datepick').datepicker({
      clearBtn: false,
      format: "yyyy-mm-dd",
      keyboardNavigation: false
  });

  $('.datepick').datepicker('setDate', '<%= raw(@selected_date) %>')
});
</script>

<div style="background-image:url('assets/greg.jpg'); background-attachment: fixed; margin-top:-20px;" id="pre_foot">
  <!-- <div class="row"> -->
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

    <h1 class="text-center" style="color:#fff; margin-top:70px">
      FIND THE PERFECT HOST</h1>

    <!-- <div class="container-fluid"> -->
    <%= form_tag hosts_search_path  do %>
      <%= text_field :search, :date,
      {class:"form-control datepick", placeholder:"Date"} %>
      <%= select :search, :location, Host.get_location,
        {selected: @selected_location}, {class:"form-control"} %>
      <%= select :search, :age_range, Host.age_ranges,
        {selected: @selected_age}, {class:"form-control"} %>
      <%= select :search, :max_group, (["Any"] + (1..10).to_a),
        {selected: @selected_group}, {class:"form-control"} %>
      <%= submit_tag :search, {class:"form-control"} %>
    <% end %>
    <!-- </div> -->
  </div>
  <!-- </div> -->
  <br>
</div>

<div class="container" style="margin-top:40px" id="view">
 <% @hosts.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |host| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <% if host.images.present? %>
          <%= link_to (image_tag host.images.first.image_file.url(:medium)), host_path(host)%>
        <% end %>
        <div class="caption" style="background-color: #D4D4D4; height: 100%">
          <!-- <div id="avataro">
            <% if host.images.present? %>
              <%= image_tag host.images.first.image_file.url(:thumb), class: "img-circle"%>
            <% end %>
          </div> -->
          <p>
            Age : <%= host.age %><br>
            Location : <%= host.state %>
          </p>

          <h3>
            <%= link_to host.username, host_path(host) %>
          </h3>

         <!--  <p><a href="#" class="btn btn-info btn-xs" role="button">Button</a></p> -->
          <p style="text-align: left"><%= link_to 'More info', host, class: "btn btn-info btn-xs", style: "color:#fff" %>
            <% if current_host == host %>
              <%= link_to 'Edit', edit_host_path(host), class: "btn btn-warning btn-xs btn_admins" %>
            <% elsif current_admin %>
              <%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs", style: "color:#fff" %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
