<%= form_for @host, html: {multipart: true} do |f| %>
  <% if @host.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@host.errors.count, "error") %> prohibited this host from being saved:</h2>

      <ul>
      <% @host.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :suburb %><br>
    <%= f.text_field :suburb %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field(:image_file) %>
  </div>
   <!-- <div class="actions">
   <%= f.submit %>
   </div> -->
 <!--   This makes google maps work DO NOT COMMENT OUT or CHANGE IT -->
  <%= f.hidden_field :latitude, class: "form-control" %>
  <%= f.hidden_field :latitude, class: "form-control" %>
  <%= f.hidden_field :longitude, class: "form-control" %>
  <div class="actions">
    <button type="button" name="geocoder" onclick="geocode()">Update Host</button> 
    <input name="commit" value="Update Host" type="submit" style="display: none">
  </div>

<% end %>
