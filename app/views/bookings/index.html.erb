<div class="container text-center">
  <% if host_signed_in? %>
    <h1>Listing bookings to your experiences</h1>
  <% elsif guest_signed_in? %>
    <h1>Listing your bookings</h1>
  <% elsif admin_signed_in? %>
    <h1>Listing all bookings</h1>
  <% else %>
    <h1>Log in to display your bookings</h1>
  <% end %>
  <% if @bookings.empty? %>
    <h2>Nothing was found D:</h2>
  <% else %>
  </br>
  <div class="col-sm-10 col-sm-offset-1" style="border: 2px solid; border-radius: 10px; border-color: #000000">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <!-- <th>End time</th> -->
          <% if guest_signed_in? %>
            <th>Host</th>
          <% elsif host_signed_in? %>
            <th>Guest</th>
          <% else %>
            <th>Host</th>
            <th>Guest</th>
          <% end %>
          <th colspan="3">Experience</th>
          <th>Status</th>
          <th>Size</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <% experience = Experience.find(booking.experience_id)%>
          <tr class="text-left">

            <td><%= booking.date.strftime('%b %d, %Y') %></td>
            <td><%= experience.time.strftime('%I:%M %p') %></td>

            <% if guest_signed_in? %>
              <td><%= link_to "#{experience.host.username}", experience.host %></td>
            <% elsif host_signed_in? %>
              <td><%= link_to "#{booking.guest.username}", booking.guest %></td>
            <% else %>
              <td><%= link_to "#{experience.host.username}", experience.host %></td>
              <td><%= link_to "#{booking.guest.username}", booking.guest %></td>
            <% end %>
            <td colspan="3"><%= link_to booking.experience.title, experience_path(experience.id.to_s) %></td>
            <td><span class="label label-info"><%= booking.status.capitalize %></span></td>
            <td><%= booking.group_size %></td>
            <td colspan="2"><%= link_to 'View', [experience, booking], class:"btn btn-xs btn-primary", style:"color:#fff" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <br>
  </div>
</div>
