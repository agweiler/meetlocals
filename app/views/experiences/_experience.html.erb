<div class="thumbnail">
  <%= link_to image_tag(experience.images.first.image_file.url(:medium)), experience if experience.images.present?%>

  <div class="caption" style="background-color: #D4D4D4; height: 100%">
    <div id="avataro">
      <%= link_to image_tag(experience.host.images.first.image_file.url(:thumb), class: "img-circle"), experience.host if experience.host.images.present? %>
    </div>

    <h3 class="host_name" ><%= link_to experience.host.username,  host_path(experience.host_id.to_s) %></h3>

    <h5><%= link_to truncate(experience.title.upcase, length: 20), experience_path(experience.id) %></h5>

    <div class="">
      <%= content_tag :h5, experience.date.strftime(" %B %d, %Y"),
       class:"fa fa-calendar fa-lg" if experience.special_event? %>
      <br>
    </div>
    <!-- <p>
      Rating:
      <%= experience.testimonials.present? ? experience.avg_rating.to_s + " / " + pluralize(experience.testimonials.count, "review") + "": '-'%>
    </p> -->
    <p>
    <p><span style="font-weight:600;">Speaks:</span>
    <%= content_tag 'span', experience.host.languages %></p>
    <p><span style="font-weight:600;">Guests:</span>
    <%= content_tag 'span', "#{experience.max_group_size} pax" %></p>
    <p><span style="font-weight:600;">Age:</span>
    <%= content_tag 'span', "#{experience.host.age} yrs old" %></p>
   </p>


    <% if current_host == experience.host || current_admin %>
    <p class="text-center">
     <%= link_to 'More info', experience, class: "btn btn-xs btn_admins fa fa-info", style: "color:#4b4b4b" %>
      <%= link_to 'Edit', edit_experience_path(experience),class: "btn btn-xs btn_admins fa fa-pencil", style: "color:#4b4b4b" %> 
       <%= link_to 'Destroy', experience, class: "btn btn-xs btn_admins fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' },  style: "color:#4b4b4b" %>
    </p>
    <% end %>
  </div>
</div>
