<div class="container">

	<div class = "col-md-offset-3 col-md-6">
  <h2 class="text-center"> View Unapproved Hosts here</h2>

	<% @hosts.each do |new_user| %>
	  <%= form_for(new_user) do |f|%>
	  <div class="field form-inline text-center">
	    <%= content_tag :strong, new_user.username %>
		  <%= content_tag :span, "(#{new_user.email})" %>
		  <%= link_to 'VIEW', host_path(new_user), class:"btn btn-default btn-sm" %>
		  <%= f.submit "Approve User", class:'form-control btn btn-primary btn-sm' %>
		  <%= link_to 'Destroy', new_user, class:"btn btn-sm red",
		   style:"color:#fff", method: :delete, data: { confirm: 'Are you sure?' } %>
		 </div>
		 <br>
		<% end %>


	<% end %>
  </div>

	<div class = "col-md-offset-3 col-md-6">
		<h2 class="text-center">Change your prices here</h2>
	  <% @prices.each do |price| %>

		<%= form_for(price) do |f|%>
    <div class="field form-inline text-center">
			<%= f.label price.meal, style:'width:50px' %>
    	<%= f.text_field :price, class:'form-control' %>
    	<%= f.submit "Change Price", class:'form-control btn btn-warning' %>
    </div>
    <% end %>
  <% end %>
  </div>

  <div class = "col-md-offset-3 col-md-6">
  	<h2 class="text-center">Change The Commision Rate</h2>
  	<%= form_for(current_admin) do |f|%>
  	    <div class="field form-inline text-center">
  				<%= f.label 'commision%', style:'width:100px' %> <br>
  	    	<%= f.text_field :commision_percentage, class:'form-control' %>
  	    	<%= f.submit "Change Commision", class:'form-control btn btn-warning' %>
  	    </div>
  	<% end %>
  </div>
</div>
