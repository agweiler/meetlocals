<p id="notice"><%= notice %></p>


<h1>Listing Guests</h1>
<div class="container">
  <% if current_admin %>

    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @guests.each do |guest| %>
          <tr>
            <td> <%= guest.username %> </td>
            <td> <%= guest.email %></td>
            <td> <%= link_to 'Show', guest %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <br>
</div>
