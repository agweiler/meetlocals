<p id="notice"><%= notice %></p>


<div class="container">
  <h1>Listing Testimonials</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Rating</th>
        <th>Booking</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @testimonials.each do |testimonial| %>
        <tr>
          <td><%= testimonial.title %></td>
          <td><%= testimonial.body %></td>
          <td><%= testimonial.rating %></td>
          <td><%= testimonial.booking_id %></td>
          <td><%= link_to 'Show', testimonial %></td>
          <% if current_admin %>
            <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
            <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

